package polymorphism;

public class TVUser {

	public static void main(String[] args) {
		
		BeanFactory factory = new BeanFactory();
		
		//TV tv = new LgTV();
		TV tv = (TV)factory.getBean("samsung");
		tv.powerOn();
		tv.volumeUp();
		tv.volumeDown();
		tv.powerOff();
				
//		LgTV tv = new LgTV();
//		tv.trunOn();
//		tv.soundUp();
//		tv.soundDown();
//		tv.trunOff();
		

		// 1. Spring 컨테이너 구동
		
		// 2. Spring  컨테이너로부터 필요한 객체를 요청(lookup)
		
		// 3. Spring 컨테이너 종료
	}

}
